<Window x:Class="MainWindow.Async_And_Await.CountSum"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainWindow.Async_And_Await"
        mc:Ignorable="d"
       Title="MainWindow" Height="400" Width="600" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button x:Name="Sync" Grid.Column="0" Grid.Row="0" Height="30" Width="300" FontSize="17" Margin="108,25,109,105" Click="Sync_Click">Run Synchronously</Button>
        <Button x:Name="Async" Grid.Column="0" Grid.Row="0" Height="30" Width="300" FontSize="17" Margin="108,67,109,63" Click="Async_Click">Run Asynchronously</Button>
        <Button x:Name="Threaded" Grid.Column="0" Grid.Row="0" Height="30" Width="300" FontSize="17" Margin="108,111,109,19" Click="Threaded_Click">Run Multithreaded</Button>
        <TextBox x:Name="Txt" Grid.Column="0" Grid.Row="1" Height="120" Width="500" Background="LightGray"></TextBox>
    </Grid>

</Window>
