<Window x:Class="MainWindow.Download_Data_Async.DownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainWindow.Download_Data_Async"
        mc:Ignorable="d"
          Title="MainWindow" Height="400" Width="620" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.55*" />
            <RowDefinition Height="0.5*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button x:Name="DownloadRSS" Grid.Column="0" Grid.Row="0" Height="40" Width="300" FontSize="17" Margin="108,25,109,105" Click="DownloadRSS_Click">Download RSS</Button>
        <Button x:Name="CounterIncButton" Grid.Column="0" Grid.Row="0" Height="40" Width="300" FontSize="17" Margin="146,92,148,54" Click="CounterIncButton_Click">Increase Counter</Button>
        <TextBox x:Name="Counter" Grid.Column="0" Grid.Row="1" Height="40" Width="500" Background="LightGray" Margin="47,15,47,112">Counter: 0</TextBox>
        <TextBox x:Name="Downloader" Grid.Column="0" Grid.Row="1" Height="40" Width="500" Background="LightGray" Margin="47,82,47,45"></TextBox>
    </Grid>
</Window>
